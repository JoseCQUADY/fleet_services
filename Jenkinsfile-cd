pipeline {
    agent any

    environment {
        SSH_HOST = '40.233.6.181'
    }

    stages {
        stage('Prueba SSH') {
            steps {
                sshagent (credentials: ['oracle-ssh-key']) {
                    bat """
                    ssh -o StrictHostKeyChecking=no opc@%SSH_HOST% echo Conexi√≥n SSH exitosa desde Jenkins en Windows
                    """
                }
            }
        }
    }
}
