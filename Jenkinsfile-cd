pipeline {
    agent any

    environment {
        SSH_FILE = credentials('oracle-ssh-password')
    }

    stages {
        stage('Conectar por SSH') {
            steps {
                sh '''
                    cp "$SSH_FILE" key.pem
                    chmod 600 key.pem
                    ssh -i key.pem -o StrictHostKeyChecking=no opc@40.233.6.181 "echo Hola desde Jenkins"
                '''
            }
        }
    }
}
