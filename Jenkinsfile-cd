pipeline {
    agent any

    environment {
        SSH_FILE = credentials('oracle-ssh-password')
    }

    stages {
        stage('Crear archivo remoto') {
            steps {
                bat '''
                copy "%SSH_FILE%" key.pem
                powershell -Command "icacls key.pem /inheritance:r"
                powershell -Command "icacls key.pem /grant:r %USERNAME%:F"
                ssh -i key.pem -o StrictHostKeyChecking=no opc@40.233.6.181 "echo 'Hola mundo' > /home/opc/hola_mundo.txt"
                '''
            }
        }
    }
}
